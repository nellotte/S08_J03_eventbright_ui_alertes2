<% if user_signed_in? %>
  <% @events.each do |event| %>
    <% if event.validated? %>
      <div class="card border-secondary m-2" style="max-width: 20rem;"> 
        <h5 class="card-header text-center"><%= event.title %></h5>
        <div class="card-body">
          <p class="card-title"><%= event.start_date.strftime('%d %B %Y') %></p>
          <p class="card-subtitle text-muted">Organisateur : <%= event.admin.first_name %> <%= event.admin.last_name %></p>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
          <image href="<%= image_path('Soeursmalsaine.jpg') %>" width="100%" height="100%" />      
          <text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text>
          <text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text>
        </svg>
        <div class="card-body">
          <%= link_to "Voir le détail", event_path(event), class: "btn btn-secondary" %>
        </div>
        <div class="card-footer text-muted">
          Publié le : <%= time_ago_in_words(event.created_at) %>
        </div>
      </div>
    <% end %>
   <% end %>
  <% else %>
  <div class="d-flex flex-wrap justify-content-center">
    <% @events.first(3).each do |event| %>
      <div class="card border-secondary m-2" style="max-width: 20rem;"> 
        <h5 class="card-header text-center"><%= event.title %></h5>
        <div class="card-body">
          <p class="card-title"><%= event.start_date.strftime('%d %B %Y') %></p>
          <p class="card-subtitle text-muted">Organisateur : <%= event.admin.first_name %> <%= event.admin.last_name %></p>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
          <image href="<%= image_path('Soeursmalsaine.jpg') %>" width="100%" height="100%" />      
          <text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text>
          <text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text>
        </svg>
        <div class="card-footer text-muted">
          Publié le : <%= time_ago_in_words(event.created_at) %> ago
        </div>
      </div>
    <% end %>
  </div>
<% end %>
