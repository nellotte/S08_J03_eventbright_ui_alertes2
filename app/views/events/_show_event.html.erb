<div class="d-flex justify-content-center align-items-center vh-70 mt-4 mb-4">
  <div class="card border-primary mb-3 " style="width: 50%; min-width: 50%; padding: 20px;">
    <h2 class="card-header text-center"><%= @event.title %></h2>
    <div class="card-body">
      <h4 class="card-title"><%= @event.start_date.strftime("%d/%m/%Y") %></h4>
      <h5 class="card-subtitle text-muted">Evènement proposé par : <%= @event.admin.first_name %> <%= @event.admin.last_name %></h5>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
      <image href="<%= image_path('Soeursmalsaine.jpg') %>" width="100%" height="100%" />      <text x="50%" y="50%" fill="#dee2e6" dy=".3em"></text>
    </svg>
    <div class="card-body">
      <p class="card-text">Détail de l'évènement : <%= @event.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Heure de début : <%= @event.start_date.strftime("%H:%M") %> </li>
      <li class="list-group-item">Durée : <%= @event.duration %> minutes</li>
      <li class="list-group-item">Participants inscrits : <%= @event.users.count %></li>
    </ul>
    <div class="card-body">
      <button type="button" class="btn btn-primary btn-lg">Billet : <%= number_to_currency(@event.price, unit: '', format: '%n') %> € </button>
    </div>
    <div class="card-body">
      <%= render 'users/users_list' %>    
    </div>
    <div class="card-body">
      <a href="/" class="card-link">Retour</a>
    </div>
  </div>
</div>