<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<%= link_to "Proposer un évènement", new_event_path %>

<div class="row">
  <% if user_signed_in? %>
    <% @events.each do |event| %>
      <div class="col-md-4">
        <div class="card mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description.truncate_words(10) %></p>
            <p class="card-text">Date: <%= event.start_date.strftime('%d %B %Y') %></p>
            <%= link_to "Voir le détail", event_path(event), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <% @events.first(3).each do |event| %>
      <div class="col-md-4">
        <div class="card mb-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><%= event.description.truncate_words(10) %></p>
            <p class="card-text">Date: <%= event.start_date.strftime('%d %B %Y') %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


